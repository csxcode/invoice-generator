<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <style>
    body {
      font-family: 'Roboto', sans-serif;
      padding: 40px;
      color: #333;
      font-size: 14px;
    }

    .header,
    .footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .header img {
      height: auto;
      width: 250px;
    }

    h1 {
      font-size: 24px;
      margin-bottom: 10px;
    }

    .section {
      margin-top: 30px;
    }

    .items table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
    }

    .items th,
    .items td {
      border: 1px solid #ccc;
      padding: 8px;
      text-align: left;
    }

    .items th {
      background: #f5f5f5;
    }

    .signature {
      margin-top: 40px;
    }

    .signature img {
      height: auto;
      max-width: 100%;
    }

    .footer {
      margin-top: 60px;
      font-size: 12px;
      color: #666;
    }
  </style>
</head>

<body>
  <div class="header">
    <img src="data:image/png;base64,<%= logoImage %>" alt="Logo" />
    <div>
      <h1>
        <%= data.header.title %>
      </h1>
    </div>
  </div>

  <div class="section">
    <p><strong>Issued by:</strong>
      <%= data.sender.name %> â€” <%= data.sender.identityDocument %>
    </p>
  </div>

  <div class="section items">
    <table>
      <thead>
        <tr>
          <th>Description</th>
          <th>Quantity</th>
          <th>Unit Value</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% data.items.forEach(item=> { %>
          <tr>
            <td>
              <%= item.description %>
            </td>
            <td>
              <%= item.qty %>
            </td>
            <td>
              $<%= item.value.toFixed(2) %>
            </td>
            <td>
              $<%= (item.qty * item.value).toFixed(2) %>
            </td>
          </tr>
          <% }); %>
            <tr>
              <td colspan="3" style="text-align: right;"><b>Total</b></td>
              <td>
                <b>$<%= data.total.toFixed(2) %></b>
              </td>
            </tr>
      </tbody>
    </table>
  </div>

  <div class="section">
    <table>
      <tr>
        <td colspan="2">
          <h3>Consignment Data</h3>
        </td>
      </tr>
      <tr>
        <td><b>Address (City - Country):</b></td>
        <td>
          <%= data.consignment.address %>
        </td>
      </tr>
      <tr>
        <td><b>Cellphone Number:</b></td>
        <td>
          <%= data.consignment.cellphone %>
        </td>
      </tr>
      <tr>
        <td><b>Bank:</b></td>
        <td>
          <%= data.consignment.bank %>
        </td>
      </tr>
      <tr>
        <td><b>Account Number:</b></td>
        <td>
          <%= data.consignment.accountNumber %>
        </td>
      </tr>
      <tr>
        <td><b>CCI:</b></td>
        <td>
          <%= data.consignment.cci %>
        </td>
      </tr>
      <tr>
        <td><b>SWIFT Code:</b></td>
        <td>
          <%= data.consignment.swiftCode %>
        </td>
      </tr>
      <tr>
        <td><b>Beneficiary:</b></td>
        <td>
          <%= data.consignment.beneficiary %>
        </td>
      </tr>
    </table>
  </div>

  <div class="signature">
    <p>Signed by: <strong>
        <%= data.sender.name %>
      </strong></p>
    <img src="data:image/png;base64,<%= signatureImage %>" alt="Signature" />
  </div>

  <div class="footer">
    <p>Invoice generated on <%= generationDate %>
    </p>
  </div>
</body>

</html>